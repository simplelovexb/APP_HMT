<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/as"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               >

                <ImageView
                    android:id="@+id/viewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_below="@+id/liner1"
                    android:scaleType="fitXY"
                    android:src="@drawable/advertise2" />

                <TextView
                    android:id="@+id/me_message_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="108dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="点击头像登录"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/set_me"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="#fff"
                    android:textSize="12sp" />


                <LinearLayout
                    android:id="@+id/store_line"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/me_message_name"
                    android:background="@null"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/collect_goods"
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:gravity="center|bottom"
                            android:text="魅力"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_user_ml"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/collect_goods"
                            android:gravity="center"
                            android:text="一"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/collect_store"
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:gravity="center|bottom"
                            android:text="薯片"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_user_chips"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/collect_store"
                            android:gravity="center"
                            android:text="一"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/credits"
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:gravity="center|bottom"
                            android:text="积分"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_user_credits"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/credits"
                            android:gravity="center"
                            android:text="一"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/civ_user_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/default_user_image"
                    app:border_color="#FFFFFF"
                    app:border_width="3dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/as"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:src="@drawable/user_email_icon" />

                    <TextView
                        android:id="@+id/me_message_email"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="邮箱"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:src="@drawable/user_group_icon" />

                    <TextView
                        android:id="@+id/me_message_groupname"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="用户组"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:src="@drawable/user_set_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="基本设置"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_search_course"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:src="@drawable/user_course_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="快速查课"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>