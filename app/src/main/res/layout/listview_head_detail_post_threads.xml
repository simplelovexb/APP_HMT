<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/author_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dip"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/iv_author_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/login_ak"
        />
    <TextView
        android:layout_height="40dp"
        android:id="@+id/tv_author_of_post_content"
        style="@style/TextTheme"
        android:layout_toRightOf="@id/iv_author_logo"
        android:text="岁月抚伤"
        android:gravity="center"
        android:layout_alignTop="@id/iv_author_logo"
        android:layout_alignBottom="@id/iv_author_logo"
        android:layout_marginLeft="8dip"
        android:textColor="@color/tab_blue"
        />

    <ImageView
        android:id="@+id/item_action_fav1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_fav_normal"
        android:layout_alignTop="@id/iv_author_logo"
        android:layout_alignBottom="@id/iv_author_logo"
        />
    <TextView
        android:id="@+id/tv_time_of_detail_forum_threads1"
        android:layout_toLeftOf="@+id/item_action_fav1"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="发表于2015-05-12"
        android:textColor="#b0bec5"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/tv_message_of_post_content"
        style="@style/TextTheme"
        android:text="        十年之前，我不认识你 你不属于我我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。"
        android:layout_below="@id/iv_author_logo"
        android:background="@null"
        android:layout_margin="4dp"
        />

    <TextView
        android:id="@+id/item_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_message_of_post_content"
        android:drawableLeft="@drawable/ic_action_comment"
        android:gravity="center"
        android:text="回复"
        android:textColor="#888888"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        />


    <TextView
        android:id="@+id/item_action_hate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_action_comment"
        android:layout_below="@id/tv_message_of_post_content"
        android:drawableLeft="@drawable/ic_action_hate"
        android:text="985踩"
        android:textColor="#888888"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/item_action_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_action_hate"
        android:layout_below="@id/tv_message_of_post_content"
        android:drawableLeft="@drawable/ic_action_love"
        android:text="985赞"
        android:textColor="#888888"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="回复/查看"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/tab_blue"
        android:layout_below="@id/tv_message_of_post_content"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="8dip"
        android:padding="4dp"
        />
</RelativeLayout>

